<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="2sp"/>

        <LinearLayout
            android:layout_width="255sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="5sp">

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Nombre restaurant"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2sp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/lblHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Horario: 5PM - 10PM"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Telf: 1234567890"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="9sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lblDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cdla San Jose Sur Calle 4ta entre la ´´B¨ y la´´C´"
                android:textSize="12sp"
                android:layout_marginTop="2sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/lblCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="Piqueos"
                android:textColor="#009688"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorAccent"/>
</LinearLayout>
